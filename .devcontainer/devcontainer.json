{
  "name": "TXAbotv2 Codespace",

  // Base image cho môi trường Ubuntu
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  // Nếu cần expose cổng để test app, thêm tại đây (tuỳ dự án, có thể bỏ)
  "forwardPorts": [3000],

  "customizations": {
    "vscode": {
      "extensions": [
        "emjio.git-auto-commit"  // Tự động commit + push
      ],
      "settings": {
        // Tự commit sau 1 phút không hoạt động
        "git-auto-commit.commitTimeInterval": 1,

        // Tự push commit lên remote
        "git-auto-commit.autoPush": true,

        // Tác giả commit
        "git-auto-commit.commitAuthor": "TXAVL <xuananhdepzai9@gmail.com>"
      }
    }
  }
}
